<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >
        <TextView
            android:id="@+id/txt_WindingNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Color3"
            android:textSize="9pt"
            android:textStyle="normal"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_WindingVoltage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Color3"
                    android:textSize="9pt"
                    android:textStyle="normal"

                    />
                <TextView
                    android:id="@+id/txt_WindingCurrent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Color3"
                    android:textSize="9pt"
                    android:textStyle="normal"


                    />

            </LinearLayout>
            <LinearLayout
                android:layout_gravity=""
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_WindingTurns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Color3"
                    android:textSize="9pt"
                    android:textStyle="normal"

                    />
                <TextView
                    android:id="@+id/txt_WireThickness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="debljina žice"
                    android:textColor="@color/Color3"
                    android:textSize="9pt"
                    android:textStyle="normal"
                    />
                <TextView
                    android:id="@+id/txt_WireLenght"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="duljina žice"
                    android:textColor="@color/Color3"
                    android:textSize="9pt"
                    android:textStyle="normal"
                    />

            </LinearLayout>

        </LinearLayout>
</LinearLayout>

